<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ico_beer"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:id="@+id/img_contato"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:transitionName="picture"/>

    <TextView
        android:text="nome contato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:id="@+id/nome_contato"
        android:layout_alignTop="@+id/img_contato"
        android:layout_toEndOf="@+id/img_contato"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="telefone contato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tel_contato"
        android:layout_below="@+id/nome_contato"
        android:layout_alignStart="@+id/nome_contato" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:srcCompat="?attr/dividerHorizontal"
        android:layout_below="@+id/img_contato"
        android:tint="@android:color/black"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2" />
</RelativeLayout>